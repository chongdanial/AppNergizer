<Page
    x:Class="Testing.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Testing"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#FF0F0E0E">
        <Grid.RowDefinitions>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="349*"/>
        </Grid.RowDefinitions>
        <Image HorizontalAlignment="Left" Height="384" Margin="1204,364,0,-50" Grid.Row="1" VerticalAlignment="Top" Width="147" Source="Images/BatteryImg.PNG"/>
        <TextBlock HorizontalAlignment="Left" Margin="554,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="65" Width="301" FontWeight="Bold" Foreground="#FFF5EA03" RenderTransformOrigin="0.5,0.5" Grid.RowSpan="2">
            <TextBlock.RenderTransform>
                <CompositeTransform Rotation="360"/>
            </TextBlock.RenderTransform>
        	<Run FontSize="48" Text="AppNergizer"/>
        </TextBlock>
        <Button x:Name="btnPlus" Content="+" HorizontalAlignment="Left" Margin="645,421,0,0" VerticalAlignment="Top" Background="#FF7199F0" Foreground="#FF080707" BorderBrush="#FFF5091F" Height="92" Width="92" FontSize="72" FontFamily="Times New Roman" Grid.Row="1"/>
        <Button x:Name="btnMinus" Content="-" HorizontalAlignment="Left" Margin="805,421,0,0" VerticalAlignment="Top" Background="#FF7199F0" Foreground="#FF080707" BorderBrush="#FFF5091F" Height="92" Width="92" FontSize="72" FontFamily="Times New Roman" Grid.Row="1"/>
        <Button x:Name="btnMultiply" Content="x" HorizontalAlignment="Left" Margin="645,554,0,0" VerticalAlignment="Top" Background="#FF7199F0" Foreground="#FF080707" BorderBrush="#FFF5091F" Height="102" Width="92" FontSize="72" FontFamily="Times New Roman" FontWeight="Normal" Grid.Row="1"/>
        <Button x:Name="btnDivide" Content="/" HorizontalAlignment="Left" Margin="805,554,0,0" VerticalAlignment="Top" Background="#FF7199F0" Foreground="#FF080707" BorderBrush="#FFF5091F" Height="102" Width="92" FontSize="72" FontFamily="Times New Roman" FontWeight="Normal" Grid.Row="1"/>
        <ToggleButton x:Name="txt1" Content="1" HorizontalAlignment="Left" Margin="81,262,0,0" VerticalAlignment="Top" IsChecked="False" FontSize="72" FontFamily="Times New Roman" Background="#FFF1C42B" Foreground="#FF0A0A0A" BorderBrush="#FF0AE632" Width="94" Grid.Row="1"/>
        <ToggleButton x:Name="txt2" Content="2" HorizontalAlignment="Left" Margin="247,262,0,0" VerticalAlignment="Top" IsChecked="False" FontSize="72" FontFamily="Times New Roman" Background="#FFF1C42B" Foreground="#FF0A0A0A" BorderBrush="#FF0AE632" Width="94" Grid.Row="1"/>
        <ToggleButton x:Name="txt3" Content="3" HorizontalAlignment="Left" Margin="413,262,0,0" VerticalAlignment="Top" IsChecked="False" FontSize="72" FontFamily="Times New Roman" Background="#FFF1C42B" Foreground="#FF0A0A0A" BorderBrush="#FF0AE632" Width="94" Grid.Row="1"/>
        <ToggleButton x:Name="txt4" Content="4" HorizontalAlignment="Left" Margin="81,402,0,0" VerticalAlignment="Top" IsChecked="False" FontSize="72" FontFamily="Times New Roman" Background="#FFF1C42B" Foreground="#FF0A0A0A" BorderBrush="#FF0AE632" Width="94" Grid.Row="1"/>
        <ToggleButton x:Name="txt5" Content="5" HorizontalAlignment="Left" Margin="247,402,0,0" VerticalAlignment="Top" IsChecked="False" FontSize="72" FontFamily="Times New Roman" Background="#FFF1C42B" Foreground="#FF0A0A0A" BorderBrush="#FF0AE632" Width="94" Grid.Row="1"/>
        <ToggleButton x:Name="txt6" Content="6" HorizontalAlignment="Left" Margin="413,402,0,0" VerticalAlignment="Top" IsChecked="False" FontSize="72" FontFamily="Times New Roman" Background="#FFF1C42B" Foreground="#FF0A0A0A" BorderBrush="#FF0AE632" Width="94" Grid.Row="1"/>
        <ToggleButton x:Name="txt7" Content="7" HorizontalAlignment="Left" Margin="81,554,0,0" VerticalAlignment="Top" IsChecked="False" FontSize="72" FontFamily="Times New Roman" Background="#FFF1C42B" Foreground="#FF0A0A0A" BorderBrush="#FF0AE632" Width="94" Grid.Row="1"/>
        <ToggleButton x:Name="txt8" Content="8" HorizontalAlignment="Left" Margin="247,554,0,0" VerticalAlignment="Top" IsChecked="False" FontSize="72" FontFamily="Times New Roman" Background="#FFF1C42B" Foreground="#FF0A0A0A" BorderBrush="#FF0AE632" Width="94" Grid.Row="1"/>
        <ToggleButton x:Name="txt9" Content="9" HorizontalAlignment="Left" Margin="413,554,0,0" VerticalAlignment="Top" IsChecked="False" FontSize="72" FontFamily="Times New Roman" Background="#FFF1C42B" Foreground="#FF0A0A0A" BorderBrush="#FF0AE632" Width="94" Grid.Row="1"/>
        <TextBox x:Name="RandomNumber" HorizontalAlignment="Left" Margin="81,169,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="51" Width="185" Background="White" BorderBrush="#FF272D6E" FontSize="36" FontFamily="Segoe UI Black" Grid.Row="1" IsReadOnly="True"/>
        <TextBox x:Name="Timer" HorizontalAlignment="Left" Margin="1018,97,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="51" Width="333" Background="White" BorderBrush="#FF272D6E" FontSize="36" FontFamily="Showcard Gothic" Grid.Row="1" IsReadOnly="True"/>
        <ProgressBar x:Name="progress" HorizontalAlignment="Left" Height="97.254" Margin="1165.703,496.955,-26.777,0" VerticalAlignment="Top" Width="227.074" RenderTransformOrigin="0.5,0.5" Foreground="#FF00FF17" UseLayoutRounding="False" d:LayoutRounding="Auto" Grid.Row="1" Maximum="5">
            <ProgressBar.RenderTransform>
                <CompositeTransform ScaleY="-1" Rotation="270"/>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        <MediaElement HorizontalAlignment="Left" Height="100" Margin="1049,571,0,0" Grid.Row="1" VerticalAlignment="Top" Width="100" Visibility="Collapsed" Source="Sounds/Fail button.mp3" x:Name="ErrorSound" IsMuted="True"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="1234,40,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="100" Source="Images/timer-xxl.png"/>
        <Image HorizontalAlignment="Left" Height="100" Margin="803,10,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="94" Source="Images/Icon.png"/>
        <TextBlock HorizontalAlignment="Left" Margin="645,45,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Spreading the Importance of Energy Saving" VerticalAlignment="Top" FontSize="24" FontFamily="Times New Roman" Foreground="#FF3BF105"/>
        <Popup/>
        <Button x:Name="btnGameOver" Content="GAME OVER" HorizontalAlignment="Left" Margin="472,217,0,0" Grid.Row="1" VerticalAlignment="Top" Height="226" Width="632" Foreground="#FF060606" Background="#FF65FBD9" FontSize="72" FontFamily="Iskoola Pota" Visibility="Collapsed"/>
        <MediaElement x:Name="CorrectSound" HorizontalAlignment="Left" Height="100" Margin="564,322,0,0" Grid.Row="1" VerticalAlignment="Top" Width="100" Source="Sounds/correct.wav" IsMuted="True"/>
        <TextBlock HorizontalAlignment="Left" Margin="81,114,0,0" Grid.Row="1" TextWrapping="Wrap" Text="Solve this Number" VerticalAlignment="Top" FontSize="36" FontFamily="Calibri" Foreground="#FFA00DF3" FontWeight="Bold"/>
    </Grid>
</Page>

